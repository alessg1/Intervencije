<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f3f3f3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Poziv..."
            android:gravity="center_vertical"
            android:id="@+id/textView"
            android:layout_marginLeft="10dp"
            android:textColor="#000000" />

        <View
            android:id="@+id/separator3"
            android:background="#e11f28"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="To je testno sporočilo, ki vsebuje besedilo :)"
            android:id="@+id/textViewBody"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView"
            android:layout_marginBottom="10dp" />

        <View
            android:id="@+id/separator"
            android:background="#e11f28"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/textViewBody" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="ALARM KASNEJE"
            android:id="@+id/buttonLater"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/separator"
            android:layout_toLeftOf="@+id/separator2" />

        <!--style="@style/Widget.AppCompat.ActionButton" -->

        <View
            android:id="@+id/separator2"
            android:background="#e11f28"
            android:layout_width="1dip"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/separator" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="ALARM NE"
            android:id="@+id/buttonNo"
            android:background="@android:color/transparent"
            android:layout_below="@+id/separator"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/separator2" />

        <View
            android:id="@+id/separator3"
            android:background="#e11f28"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/separator2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="ALARM DA"
            android:id="@+id/buttonYes"
            android:background="@android:color/transparent"
            android:layout_below="@+id/separator2"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</LinearLayout>